body {
    font-family: Arial, sans-serif;
    margin: 0px;
    overflow-x: hidden;
}

#titulo, h2 {
    font-weight: bold;
    margin: 20px;
}

.contenedor {
    padding: 10px;
    margin: 10px;
    border-radius: 10px;
	background-color: white;
} 

.tarjeta {
    display: flex
    align-items: center; 
    padding: 0.5px;
    margin: 15px;
    width: 400px;
    float: left;
    box-sizing: border-box;
	border-radius: 10px;
	font-size: 12px;
	background-color: #0000ff;
    background-image: radial-gradient(circle, #0000ed 20%, transparent 70%);
    box-shadow: 0px 0px 10px rgba(0, 0, 255, 0.5);
}


body {
    font-family: Arial, sans-serif;
    margin: 0px;
    overflow-x: hidden;
}

h1 {
    font-weight: bold;
    margin: 20px;
}

#menu {
    background-color: #007bff;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    padding: 10px;
}

#menu a {
    color: #fff;
    text-decoration: none;
    padding: 10px;
}

#menu a:hover {
    background-color: #0056b3;
    color: #fff;
}

#contenedor-borrar {
    padding: 20px;
    margin: 5px auto;
    border-radius: 10px;
    background-color: #007bff;
    width: 90%;
}

#tarjeta-borrar {
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center;
    padding: 20px;
    margin: 30px auto;
    width: 60%;
    box-sizing: border-box;
    border-radius: 10px;
    background-color: #0056b3;
    color: black;
}

#tarjeta-borrar h2 {
    margin-bottom: 20px;
    text-align: center;
    color: white;
    font-size: 35px;
}

#contenedor-borrar label {
    display: block;
    margin-bottom: 5px;
    color: white;
    font-size: 25px;
}

article {
  background-color: #007bff;
  padding: 20px;
  margin: 20px auto;
  width: 60%;
  border-radius: 10px;
}

#borrar-desde {
    font-size: 20px;
    font-weight: bold;
    color: white;
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: #0056b3;
}

#borrar-boton {
    width: 100%;
    padding: 10px;
    border: 1px solid #000;
    border-radius: 5px;
    font-size: 25px;
}

#texto-borrar-desde {
    font-size: 20px;
    font-weight: bold;
    color: white;
}
.login-box {
  border: 2px solid #007BFF;
  padding: 20px;
  border-radius: 10px;
  background-color: #f8f9fa;
  width: 300px;
  margin: 0 auto;
}

.login-box h2 {
  text-align: center;
  color: #007BFF;
}

.login-box .field,
.login-box .actions {
  margin-bottom: 15px;
}

.login-box .actions {
  text-align: center;
}

.login-box input[type="submit"] {
  background-color: #007BFF;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.login-box input[type="submit"]:hover {
  background-color: #0056b3;
}